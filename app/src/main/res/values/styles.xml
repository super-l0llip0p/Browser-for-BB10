<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="BrowserActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHighlight">@color/colorTopBarLine</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DarkActionBarActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHighlight">@color/colorTopBarLine</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ReadabilityActivityTheme" parent="DarkActionBarActivityTheme" />

    <style name="SettingActivityTheme" parent="DarkActionBarActivityTheme" />

    <style name="WhitelistActivityTheme" parent="DarkActionBarActivityTheme" />

    <style name="TokenActivityTheme" parent="DarkActionBarActivityTheme" />

    <style name="ClearActivityTheme" parent="DarkActionBarActivityTheme" />

    <style name="ImageButtonTheme">
        <item name="android:layout_width">@dimen/layout_width_44dp</item>
        <item name="android:layout_height">@dimen/layout_height_44dp</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:contentDescription">@null</item>
    </style>

    <style name="ButtonTheme">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/button_background_dark</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:height">36dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="PopupMenuTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:itemBackground">@drawable/dialog_text_item_selector</item>
        <item name="android:textAppearanceLargePopupMenu">@style/PopupMenuTextTheme</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/PopupMenuTextTheme</item>
        <item name="dropDownListViewStyle">@style/PopupMenuDividerTheme</item>
        <item name="android:textColorSecondary">@color/text</item>
    </style>

    <style name="PopupMenuTextTheme">
        <item name="android:textSize">@dimen/text_default_size</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="PopupMenuDividerTheme" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@color/divider</item>
        <item name="android:dividerHeight">@dimen/divider_height_2dp</item>
    </style>

    <style name="ProgressDialogTheme" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/text_default_size</item>
    </style>

    <style name="SettingsCategoryTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/layout_height_20dp</item>
        <item name="android:background">@drawable/shape_settings_category_title</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:paddingStart">@dimen/padding_10dp</item>
        <item name="android:paddingEnd">@dimen/padding_10dp</item>
        <item name="android:textColor">@color/settings_category_title</item>
        <item name="android:textSize">@dimen/text_small_size</item>
    </style>

    <style name="SettingsItemTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/layout_margin_10dp</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/text_default_size</item>
    </style>

    <style name="SpinnerTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:background">@drawable/shape_spinner</item>
        <item name="android:layout_marginStart">@dimen/layout_margin_10dp</item>
        <item name="android:layout_marginEnd">@dimen/layout_margin_10dp</item>
        <item name="android:popupBackground">@color/settings_spinner_popup_background</item>
    </style>

    <style name="SettingsItemDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginTop">@dimen/layout_margin_10dp</item>
        <item name="android:background">@color/settings_divider</item>
    </style>

    <style name="SettingsSwitch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:layout_marginStart">@dimen/layout_margin_10dp</item>
        <item name="android:layout_marginEnd">@dimen/layout_margin_10dp</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/text_default_size</item>
        <item name="android:background">@null</item>
    </style>

    <style name="SettingsButton">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/text_default_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:layout_marginStart">@dimen/layout_margin_10dp</item>
        <item name="android:layout_marginEnd">@dimen/layout_margin_10dp</item>
        <item name="android:background">@drawable/button_background_light</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
</resources>
