<?xml version="1.0" encoding="utf-8"?>

<cc.markc.purerifle.View.NinjaRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <org.askerov.dynamicgrid.DynamicGridView
        android:id="@+id/home_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:columnWidth="168dp"
        android:gravity="center"
        android:numColumns="auto_fit"
        android:paddingTop="24dp"
        android:scrollbars="none"
        android:stretchMode="spacingWidthUniform"
        android:verticalSpacing="24dp" />

    <TextView
        android:id="@+id/home_about_blank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/layout_margin_6dp"
        android:gravity="center"
        android:text="@string/main_about_blank"
        android:textColor="@color/hint"
        android:textSize="@dimen/text_default_size"
        android:visibility="gone" />

</cc.markc.purerifle.View.NinjaRelativeLayout>