<?xml version="1.0" encoding="utf-8"?>

<cc.markc.purerifle.View.NinjaRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ListView
        android:id="@+id/record_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="@dimen/divider_height_2dp"
        android:drawSelectorOnTop="true" />

    <TextView
        android:id="@+id/record_list_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:ellipsize="none"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/list_empty"
        android:textColor="@color/hint"
        android:textSize="@dimen/text_default_size"
        android:visibility="gone" />

</cc.markc.purerifle.View.NinjaRelativeLayout>